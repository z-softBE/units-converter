<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    
    <changeSet id="02-01-currency_exchange_rates-table" author="Wout">
        <createTable tableName="currency_exchange_rates">
            <column name="id" type="TEXT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_unit" />
            </column>

            <column name="rate" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>

            <column name="inverse_rate" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>